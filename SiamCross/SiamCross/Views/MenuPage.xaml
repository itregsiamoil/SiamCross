<?xml version="1.0" encoding="UTF-8"?>
<ContentPage BackgroundColor="White"
         xmlns="http://xamarin.com/schemas/2014/forms" 
         xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
         x:Class="SiamCross.Views.MenuPage">


    <ContentPage.Padding >
        <OnPlatform x:TypeArguments="Thickness" iOS=" 0 , 20 , 0 , 0" />
    </ContentPage.Padding>
    <ContentPage.Content>
        <StackLayout BackgroundColor="White" Padding ="10 , 30 , 10, 10">
            <Label Text="SIAM SERVICE" FontSize="Large"  TextColor="White" BackgroundColor="Blue"/>
            <Button Text="Панель управления" BackgroundColor="White" TextColor="Black" HorizontalOptions="StartAndExpand" Command="{Binding GoControlPanel}" />
            <BoxView HeightRequest="0.5" HorizontalOptions="FillAndExpand" BackgroundColor="Gray"/>
            <Button Text="Поиск" BackgroundColor="White" TextColor="Black" HorizontalOptions="StartAndExpand" Command="{Binding GoSearchPanel}" />
            <BoxView HeightRequest="0.5" HorizontalOptions="FillAndExpand" BackgroundColor="Gray"/>
            <Button Text="Измерения" TextColor="Black" BackgroundColor="White" HorizontalOptions="StartAndExpand" Command="{Binding GoMeasuringPanel}"/>
            <BoxView HeightRequest="0.5" HorizontalOptions="FillAndExpand" BackgroundColor="Gray"/>
            <Button Text="Справочник" BackgroundColor="White" TextColor="Black" HorizontalOptions="StartAndExpand" Command="{Binding GoDirectoryPanel}" />
            <BoxView HeightRequest="0.5" HorizontalOptions="FillAndExpand" BackgroundColor="Gray"/>
            <Button Text="Настройки" BackgroundColor="White" TextColor="Black" HorizontalOptions="StartAndExpand" Command="{Binding GoSettingsPanel}" />
            <BoxView HeightRequest="0.5" HorizontalOptions="FillAndExpand" BackgroundColor="Gray"/>
            <Button Text="О приложении" TextColor="Black" BackgroundColor="White" HorizontalOptions="StartAndExpand" Command="{Binding GoAboutPanel}"/>
            <BoxView HeightRequest="0.5" HorizontalOptions="FillAndExpand" BackgroundColor="Gray"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>