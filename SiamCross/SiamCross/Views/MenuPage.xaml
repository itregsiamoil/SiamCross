<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SiamCross;assembly=SiamCross"
    xmlns:viewmodels="clr-namespace:SiamCross.ViewModels"
    x:Class="SiamCross.Views.MenuPage"
    x:DataType="viewmodels:MenuPageViewModel"
    >

    <ContentPage.Content>
        <StackLayout Margin="5">
            <!--Padding ="10 , 30 , 10, 10"-->
            <Label Text="SIAM SERVICE" 
                   FontSize="Title"
                   FontAttributes ="Bold"
                   TextColor="{StaticResource colorPrimaryDark}"/>
            <Label TextColor="{StaticResource colorPrimaryDark}">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="{local:Translate AppVersion}"  />
                        <Span Text=" "  />
                        <Span Text="{Binding Version}" />
                    </FormattedString>
                </Label.FormattedText>
            </Label>
            <ListView ItemsSource="{Binding MenuItems}"
                      x:Name="menuListView"
                      ItemTapped="MenuListView_ItemTapped"
                      Margin="5">
                <!--ItemSelected="menuListView_ItemSelected"-->
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="viewmodels:MenuPageItem">
                        <ViewCell>
                            <Label Text="{Binding Title}" 
                                   FontSize="Medium" 
                                   Margin="5" />
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>