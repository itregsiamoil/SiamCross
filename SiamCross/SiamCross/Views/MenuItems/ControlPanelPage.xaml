<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:SiamCross;assembly=SiamCross"
             x:Class="SiamCross.Views.MenuItems.ControlPanelPage"
             x:Name="ControlPanel"
             Title="{local:Translate ControlPanelTitle}">
    
    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="colorTest">Black</Color>
        </ResourceDictionary>
        <!--Style TargetType="{x:Type Label}" ApplyToDerivedTypes="True">
        <Setter Property="TextColor" Value="Black" />
    </> -->
    </ContentPage.Resources>
    <ContentPage.Content>

        <StackLayout>
            <ListView x:Name="sensorList" 
                      ItemsSource="{Binding Sensor}"
                SeparatorVisibility="None"
                HasUnevenRows="True"
                Margin="0">
                <!--
                ItemsSource="{Binding SensorsData}"  
                ItemTapped="sensorList_ItemTapped">
                -->
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.View >
                                <Frame BorderColor="{StaticResource colorCtrlInactive}"
                                       Padding="0" Margin="5"  CornerRadius="4" 
                                       HasShadow="True"  
                                       >
                                    <StackLayout VerticalOptions="FillAndExpand">
                                        <Expander IsExpanded="True">
                                            <Expander.Header x:Name ="ExpanderHeader"  >
                                                <Grid x:Name="MyGrid" VerticalOptions="StartAndExpand" 
                                                      BackgroundColor="{StaticResource colorCtrlInactive}" 
                                                      Margin="0" Padding="0" RowSpacing="0" >
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"></RowDefinition>
                                                        <RowDefinition Height="Auto"></RowDefinition>
                                                    <!--RowDefinition Height="{Binding FontSize:Small}"></-->
                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                    </Grid.ColumnDefinitions>

                                                    <Label Text="&#x25BC;" FontSize="Large" x:Name="btnColapse" 
                                                            Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" 
                                                            HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"
                                                            VerticalTextAlignment="Center" HorizontalTextAlignment="Center" 
                                                            WidthRequest="{Binding Source={RelativeSource Self}, Path=Height}">
                                                        <Label.Triggers>
                                                            <DataTrigger TargetType="Label"
                                                                         Binding="{Binding Source={RelativeSource AncestorType={x:Type Expander}}, Path=IsExpanded}" 
                                                                        Value="True">
                                                                <Setter Property="Text" Value="&#x25B2;" />
                                                            </DataTrigger>
                                                        </Label.Triggers>
                                                    </Label>
                                                    <Label Text="{Binding SensorData.Name}" x:Name="NameLabel"
                                                        Grid.Row="0" Grid.Column="1"
                                                        HorizontalOptions="FillAndExpand" 
                                                        FontSize="Medium" FontAttributes="Bold" >
                                                        <Label.Triggers>
                                                            <DataTrigger TargetType="Label" Binding="{Binding Connection.State}" Value="PendingConnect" >
                                                                <Setter Property="TextColor" Value="{StaticResource colorPrimary}"  />
                                                            </DataTrigger>
                                                            <DataTrigger TargetType="Label" Binding="{Binding Connection.State}" Value="Connected" >
                                                                <Setter Property="TextColor" Value="{StaticResource colorAccent}"  />
                                                            </DataTrigger>
                                                        </Label.Triggers>

                                                    </Label>
                                                    <Label Text="{Binding SensorData.Type}" 
                                                            Grid.Row="1" Grid.Column="1" 
                                                            FontSize="Small" />
                                                    <Button Text="&#x2716;" FontSize="Medium" x:Name="btnRemove" TextColor="#40FF0000"
                                                            Grid.Row="0" Grid.Column="2" Grid.RowSpan="3"
                                                            BorderWidth="0" BorderColor="LightGray" CornerRadius="0" BackgroundColor="#10FF0000"
                                                            HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"
                                                            Command="{Binding Path=BindingContext.DeleteSensorCommand, 
                                                            Source={x:Reference ControlPanel}}"
                                                            CommandParameter="{Binding SensorData.Id}"
                                                            WidthRequest="{Binding Source={RelativeSource Self}, Path=Height}">
                                                            <!-- BindingContext="{x:Reference btnColapse}" WidthRequest ="{Binding Height, Mode=OneWay}"> -->
                                                        </Button>
                                                    </Grid>
                                            </Expander.Header>
                                            <Expander.Content >
                                                <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" 
                                                             Padding="2,2,2,2" Margin="0" Spacing="0" >
                                                    <Grid FlexLayout.AlignSelf="Auto" FlexLayout.Basis="200" FlexLayout.Grow="2"
                                                              RowSpacing="0" >
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto"></RowDefinition>
                                                            <RowDefinition Height="Auto"></RowDefinition>
                                                        </Grid.RowDefinitions>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                        </Grid.ColumnDefinitions>
                                                        <!--
                                                        <Label Text="&#x1F522;" FontSize="Large" TextColor="Black" 
                                                                    VerticalTextAlignment="Center" HorizontalOptions="Center"
                                                                    Grid.Row="0" Grid.Column="0"  Grid.RowSpan="2"/>
                                                        
                                                        <Label Text="{Binding SensorData.Firmware}" FontAttributes="Bold" 
                                                                    Grid.Row="0" Grid.Column="1" 
                                                                    HorizontalOptions="StartAndExpand" VerticalOptions="StartAndExpand" >
                                                            <Label.FormattedText>
                                                                <FormattedString >
                                                                    <Span Text="{Binding SensorData.Firmware}" />
                                                                    <Span Text=" / " />
                                                                    <Span Text="{Binding SensorData.RadioFirmware}" />
                                                                </FormattedString>
                                                            </Label.FormattedText>
                                                        </Label>
                                                        -->
                                                        <Label Text="{local:Translate Firmware}" FontSize="Micro"
                                                                       Grid.Row="1" Grid.Column="1"  
                                                                       HorizontalOptions="StartAndExpand" VerticalOptions="StartAndExpand" >
                                                            <Label.FormattedText>
                                                                <FormattedString >
                                                                    <Span Text="{local:Translate Firmware}" />
                                                                    <Span Text="{Binding SensorData.Firmware}" />
                                                                    <Span Text=" " />
                                                                    <Span Text="{local:Translate RadioFirmware}" />
                                                                    <Span Text="{Binding SensorData.RadioFirmware}" />
                                                                </FormattedString>
                                                            </Label.FormattedText>
                                                        </Label>
                                                    </Grid>
                                                    <FlexLayout Wrap="Wrap" JustifyContent="Start" 
                                                                Direction="Row" >
                                                        <Grid FlexLayout.AlignSelf="Auto" FlexLayout.Basis="100" FlexLayout.Grow="1"
                                                              RowSpacing="0" >
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="Auto"></RowDefinition>
                                                                <RowDefinition Height="Auto"></RowDefinition>
                                                            </Grid.RowDefinitions>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                            </Grid.ColumnDefinitions>
                                                            <Label Text="&#x1F321;" FontSize="Large" TextColor="Black"
                                                                   Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" 
                                                                   VerticalTextAlignment="Center" HorizontalTextAlignment="Center" />
                                                            <Label x:Name="lblTemperature" FontAttributes="Bold"
                                                                   Grid.Row="0" Grid.Column="1" >
                                                                <Label.Text>
                                                                    <MultiBinding StringFormat="{}{0} {1}">
                                                                        <Binding Path="SensorData.Temperature" />
                                                                        <Binding Source="{local:Translate DegCentigradeUnits}" />
                                                                    </MultiBinding>
                                                                </Label.Text>

                                                            </Label>
                                                            <Label Text="{local:Translate Temperature}" FontSize="Micro" 
                                                                   Grid.Row="1" Grid.Column="1"  />
                                                        </Grid>
                                                        <Grid FlexLayout.AlignSelf="Auto" FlexLayout.Basis="100" FlexLayout.Grow="1"
                                                              RowSpacing="0" >
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="Auto"></RowDefinition>
                                                                <RowDefinition Height="Auto"></RowDefinition>
                                                            </Grid.RowDefinitions>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                            </Grid.ColumnDefinitions>
                                                            <Label Text="&#x1F50B;" FontSize="Large" TextColor="Black"
                                                                   Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" 
                                                                   VerticalTextAlignment="Center" HorizontalTextAlignment="Center" />
                                                            <Label x:Name="lblVoltage" FontAttributes="Bold"
                                                                   Grid.Row="0" Grid.Column="1" >
                                                                <Label.Text>
                                                                    <MultiBinding StringFormat="{}{0} {1}">
                                                                        <Binding Path="SensorData.Battery" />
                                                                        <Binding Source="{local:Translate VoltsUnits}" />
                                                                    </MultiBinding>
                                                                </Label.Text>
                                                            </Label >
                                                            <Label Text="{local:Translate Voltage}" FontSize="Micro" 
                                                                   Grid.Row="1" Grid.Column="1" />
                                                        </Grid>


                                                    </FlexLayout>
                                                    <Grid x:Name="ConnectionBox" 
                                                               RowSpacing="0" >
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto"></RowDefinition>
                                                            <RowDefinition Height="Auto"></RowDefinition>
                                                        </Grid.RowDefinitions>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                            <ColumnDefinition Width="*"></ColumnDefinition>
                                                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                        </Grid.ColumnDefinitions>
                                                        <Label Text="&#x1F4F6;" FontSize="Large" TextColor="Black"
                                                                   Grid.Row="0" Grid.Column="0" Grid.RowSpan="2"
                                                                   VerticalTextAlignment="Center" HorizontalTextAlignment="Center" />
                                                        <Label Text="{Binding Connection.State}" FontAttributes="Bold" HorizontalOptions="StartAndExpand"
                                                                   Grid.Row="0" Grid.Column="1" />
                                                        <Label Text="Connection" FontSize="Micro" 
                                                                   Grid.Row="1" Grid.Column="1" >
                                                            <Label.FormattedText Margin="0">
                                                                <FormattedString >
                                                                    <Span Text="{Binding Connection.PhyInterface.Name}" />
                                                                    <Span Text=" " />
                                                                    <Span Text="Connection"/>
                                                                </FormattedString>
                                                            </Label.FormattedText>
                                                        </Label>
                                                        <Switch IsToggled="{Binding Activate}" HorizontalOptions="End"
                                                                    Grid.Row="0" Grid.Column="2" Grid.RowSpan="2" />
                                                    </Grid>
                                                    <Grid x:Name="MeasureBox"
                                                          VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" 
                                                          RowSpacing="0" >
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto"></RowDefinition>
                                                            <RowDefinition Height="Auto"></RowDefinition>
                                                            <RowDefinition Height="Auto"></RowDefinition>
                                                        </Grid.RowDefinitions>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                            <ColumnDefinition Width="*"></ColumnDefinition>
                                                        </Grid.ColumnDefinitions>
                                                        <Label Text="&#x1F4C8;" FontSize="Large" TextColor="Black"
                                                           Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" 
                                                           VerticalTextAlignment="Center" HorizontalTextAlignment="Center" />

                                                        <Label 
                                                            Grid.Row="0" Grid.Column="1" Grid.RowSpan="2"
                                                            VerticalTextAlignment="Start" HorizontalTextAlignment="Start"
                                                            HorizontalOptions ="StartAndExpand" VerticalOptions ="StartAndExpand">
                                                            <Label.FormattedText Margin="0">
                                                                <FormattedString >
                                                                    <Span Text="{Binding SensorData.Status}" />
                                                                    
                                                                </FormattedString>
                                                            </Label.FormattedText>
                                                        </Label>
                                                        <Label Text="{Binding MeasureProgressP}" FontSize="Micro"
                                                               Grid.Row="2" Grid.Column="0"
                                                               VerticalOptions="FillAndExpand"
                                                               VerticalTextAlignment="Center" HorizontalTextAlignment="End" />
                                                        <ProgressBar Progress="{Binding MeasureProgress}" 
                                                                     
                                                            Margin="2" HorizontalOptions ="FillAndExpand" IsVisible="true"
                                                            Grid.Row="2" Grid.Column="1" />
                                                    </Grid>
                                                    <Button x:Name="BtnStartMeasure" Text="{local:Translate MeasurementsTitle}" FontSize="Medium" 
                                                            BorderWidth="0" BorderColor="{StaticResource colorCtrlInactive}"
                                                            CornerRadius="0" BackgroundColor="{StaticResource colorCtrlNormal}"
                                                            Command="{Binding Path=BindingContext.GotoMeasurementPageCommand, 
                                                            Source={x:Reference ControlPanel}}"
                                                            CommandParameter="{Binding SensorData.Id}">
                                                    </Button>
                                                    <!--
                                                    <Span Text="&#10;" />
                                                    <Grid HeightRequest="40"
                                                          VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Margin="0" >
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto"></RowDefinition>
                                                        </Grid.RowDefinitions>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="1*"></ColumnDefinition>
                                                            <ColumnDefinition Width="1*"></ColumnDefinition>
                                                            <ColumnDefinition Width="1*"></ColumnDefinition>
                                                        </Grid.ColumnDefinitions>
                                                        <ImageButton Source="trashcan.png" Grid.Column="0" Grid.Row="0" 
                                                                    BorderWidth="0" BorderColor="LightGray" CornerRadius="5" BackgroundColor="Transparent"
                                                                     Margin="0" Padding="0"
                                                                    HorizontalOptions="Fill" VerticalOptions="CenterAndExpand"
                                                                    Command="{Binding Path=BindingContext.DeleteSensorCommand, 
                                                                    Source={x:Reference ControlPanel}}"
                                                                    CommandParameter="{Binding Id}"
                                                                    >
                                                        </ImageButton>
                                                        <ImageButton Source="{local:ImageResource SiamCross.images.recent.png}" Grid.Column="1" Grid.Row="0"
                                                                    BorderWidth="0" BorderColor="LightGray" CornerRadius="5" BackgroundColor="Transparent"
                                                                     Margin="0" Padding="0"
                                                                    HorizontalOptions="Fill" VerticalOptions="CenterAndExpand"
                                                                    Command="{Binding Path=BindingContext.RecentMeasurementCommand, 
                                                                    Source={x:Reference ControlPanel}}"
                                                                    CommandParameter="{Binding Id}"
                                                                    >
                                                        </ImageButton>
                                                        <ImageButton Source="{local:ImageResource SiamCross.images.start.png}" Grid.Column="2" Grid.Row="0"
                                                                    BorderWidth="0" BorderColor="LightGray" CornerRadius="5" BackgroundColor="Transparent"
                                                                    HorizontalOptions="Fill" VerticalOptions="CenterAndExpand"
                                                                    Command="{Binding Path=BindingContext.GotoMeasurementPageCommand, 
                                                                    Source={x:Reference ControlPanel}}"
                                                                    CommandParameter="{Binding Id}"
                                                                    >
                                                        </ImageButton>
                                                    </Grid>
                                                    -->
                                                </StackLayout>
                                            </Expander.Content>
                                        </Expander>
                                    </StackLayout>
                                </Frame>
                            </ViewCell.View>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>