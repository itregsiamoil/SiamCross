<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SiamCross.Views.MenuItems.ControlPanelPage"
             xmlns:rainbows="clr-namespace:Xamarin.Forms.DebugRainbows;assembly=Xamarin.Forms.DebugRainbows"
             xmlns:local="clr-namespace:SiamCross;assembly=SiamCross"
             x:Name="ControlPanel"
             Title="{local:Translate ControlPanelTitle}">
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="sensorList"
                HasUnevenRows="True"
                Margin="5"
                ItemsSource="{Binding SensorsData}"                                    
                ItemTapped="sensorList_ItemTapped">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.View>
                                <StackLayout VerticalOptions="FillAndExpand" HeightRequest="130">
                                    <Grid VerticalOptions="FillAndExpand"
                                          rainbows:DebugRainbow.IsDebug="False">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"></RowDefinition>
                                            <RowDefinition Height="Auto" ></RowDefinition>
                                            <RowDefinition Height="*"></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="3*"></ColumnDefinition>
                                            <ColumnDefinition Width="*"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <Label HorizontalOptions="StartAndExpand" Text="{Binding Name}" FontSize="18" 
                                               Grid.Row="0" Grid.Column="0"/>
                                        <Label HorizontalOptions="Start" Text="{Binding Type}" Grid.Row="1" Grid.Column="0" />

                                        <StackLayout Orientation="Horizontal" Grid.Row="1" Grid.Column="1" HorizontalOptions="End">
                                            <Label HorizontalOptions="Start" Text="{local:Translate Firmware}" FontSize ="Micro"/>
                                            <Label HorizontalOptions="Start" Text="{Binding Firmware}" FontSize ="Micro"/>
                                        </StackLayout>
                                        
                                        <Label HorizontalOptions="StartAndExpand" Text="{Binding Status}" Grid.Row="2" Grid.Column="0"/>
                                        <!--<Button HorizontalOptions="EndAndExpand" 
                                                Command="{Binding Path=BindingContext.DeleteSensorCommand, 
                                            Source={x:Reference ControlPanel}}"
                                                CommandParameter="{Binding Id}" 
                                                BackgroundColor="Transparent"
                                                VerticalOptions="FillAndExpand"  
                                                HeightRequest="20"
                                                WidthRequest="40"
                                                Grid.Row="2" Grid.Column="1"
                                                ImageSource="trashcan.png"></Button>-->
                                        <Image HorizontalOptions="EndAndExpand"
                                               BackgroundColor="Transparent"
                                                VerticalOptions="FillAndExpand"  
                                                HeightRequest="20"
                                                WidthRequest="40"
                                                Grid.Row="2" Grid.Column="1"
                                                Source="trashcan.png"
                                               >
                                            <Image.GestureRecognizers>
                                                <TapGestureRecognizer
                                            Command="{Binding Path=BindingContext.DeleteSensorCommand, 
                                            Source={x:Reference ControlPanel}}"
                                                CommandParameter="{Binding Id}" />
                                            </Image.GestureRecognizers>
                                        </Image>
                                    </Grid>
                                </StackLayout>
                            </ViewCell.View>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>