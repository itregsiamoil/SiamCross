<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SiamCross.Views.MenuItems.ControlPanelPage"
             xmlns:rainbows="clr-namespace:Xamarin.Forms.DebugRainbows;assembly=Xamarin.Forms.DebugRainbows"
             xmlns:local="clr-namespace:SiamCross;assembly=SiamCross"
             x:Name="ControlPanel"
             Title="{local:Translate ControlPanelTitle}">
    
    <ContentPage.Content>

        <StackLayout>
            <ListView x:Name="sensorList" 
                SeparatorVisibility="None"
                HasUnevenRows="True"
                Margin="0"
                ItemsSource="{Binding SensorsData}"                                    
                ItemTapped="sensorList_ItemTapped">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.View >
                                <Frame BorderColor="{StaticResource colorSwitchThumbNormal}"
                                       Padding="0" Margin="4"  CornerRadius="4" 
                                       HasShadow="True"  
                                       >
                                    <StackLayout VerticalOptions="FillAndExpand">
                                        <Expander IsExpanded="True">
                                            <Expander.Header x:Name ="ExpanderHeader"  >
                                                <Grid x:Name="MyGrid" VerticalOptions="StartAndExpand" 
                                                      BackgroundColor="{StaticResource colorSwitchThumbNormal}"
                                                      Margin="0" Padding="0" RowSpacing="0" >
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"></RowDefinition>
                                                        <RowDefinition Height="Auto"></RowDefinition>
                                                    <!--RowDefinition Height="{Binding FontSize:Small}"></-->
                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                    </Grid.ColumnDefinitions>
                                                    <!--
                                                    <Button Text="&#x25BC;" FontSize="Large" x:Name="colapser"
                                                            Grid.Row="0" Grid.Column="0" Grid.RowSpan="2"
                                                            BorderWidth="1" BorderColor="LightGray" CornerRadius="10" BackgroundColor="Transparent"
                                                            HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"
                                                            WidthRequest ="{Binding Height, Mode=OneWay}" >
                                                        <Button.Triggers>
                                                            <DataTrigger TargetType="Button"
                                                                            Binding="{Binding Source={RelativeSource AncestorType={x:Type Expander}}, Path=IsExpanded}" 
                                                                            Value="True">
                                                                <Setter Property="Text" Value="&#x25B2;" />
                                                            </DataTrigger>
                                                        </Button.Triggers>
                                                    </Button>
                                                    -->
                                                    <Label Text="&#x25BC;" FontSize="Large" x:Name="btnColapse"
                                                            Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" 
                                                            HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"
                                                            VerticalTextAlignment="Center" HorizontalTextAlignment="Center" 
                                                            WidthRequest="{Binding Source={RelativeSource Self}, Path=Height}">
                                                        <Label.Triggers>
                                                                <DataTrigger TargetType="Label"
                                                                            Binding="{Binding Source={RelativeSource AncestorType={x:Type Expander}}, Path=IsExpanded}" 
                                                                            Value="True">
                                                                    <Setter Property="Text" Value="&#x25B2;" />
                                                                </DataTrigger>
                                                        </Label.Triggers>
                                                    </Label>
                                                    <Label Text="{Binding Name}" x:Name="NameLabel"  
                                                        Grid.Row="0" Grid.Column="1"
                                                        HorizontalOptions="FillAndExpand" 
                                                        FontSize="Medium" FontAttributes="Bold" />
                                                    <Label Text="{Binding Type}" 
                                                            Grid.Row="1" Grid.Column="1" 
                                                            FontSize="Small" />
                                                    <Button Text="&#x2716;" FontSize="Medium" x:Name="btnRemove"
                                                            Grid.Row="0" Grid.Column="2" Grid.RowSpan="3"
                                                            BorderWidth="0" BorderColor="LightGray" CornerRadius="0" BackgroundColor="LightPink"
                                                            HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"
                                                            Command="{Binding Path=BindingContext.DeleteSensorCommand, 
                                                            Source={x:Reference ControlPanel}}"
                                                            CommandParameter="{Binding Id}"
                                                            WidthRequest="{Binding Source={RelativeSource Self}, Path=Height}">
                                                            <!-- BindingContext="{x:Reference btnColapse}" WidthRequest ="{Binding Height, Mode=OneWay}"> -->
                                                        </Button>
                                                    </Grid>
                                            </Expander.Header>
                                            <Expander.Content>
                                                <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                                                    <Grid VerticalOptions="FillAndExpand" Margin="0" Padding="0" RowSpacing="0">
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto"></RowDefinition>
                                                            <RowDefinition Height="Auto"></RowDefinition>
                                                            <RowDefinition Height="Auto"></RowDefinition>
                                                            <RowDefinition Height="Auto"></RowDefinition>
                                                            <RowDefinition Height="Auto"></RowDefinition>
                                                            <RowDefinition Height="Auto"></RowDefinition>
                                                            <RowDefinition Height="Auto"></RowDefinition>
                                                            <RowDefinition Height="Auto"></RowDefinition>
                                                            <RowDefinition Height="Auto"></RowDefinition>
                                                            <RowDefinition Height="Auto"></RowDefinition>
                                                        </Grid.RowDefinitions>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="2*"></ColumnDefinition>
                                                            <ColumnDefinition Width="6*"></ColumnDefinition>
                                                            <ColumnDefinition Width="2*"></ColumnDefinition>
                                                        </Grid.ColumnDefinitions>

                                                        <Label Text="&#x1F5B4;" FontSize="Medium" TextColor="Black"
                                                           Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" 
                                                           VerticalTextAlignment="Center" HorizontalTextAlignment="Center" />
                                                        <Label Text="{Binding Firmware}" FontAttributes="Bold" 
                                                           Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" />
                                                        <Label Text="{local:Translate Firmware}" FontSize="Micro" 
                                                           Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" />

                                                        <!--
                                            <Label Text="{local:Translate RadioFirmware}" FontSize ="Micro"/>
                                            <Label Text="{Binding RadioFirmware}" FontSize ="Micro"/>
                                             -->

                                                        <Label Text="&#x1F47E;" FontSize="Medium" TextColor="Black"
                                                           Grid.Row="2" Grid.Column="0" Grid.RowSpan="2" 
                                                           VerticalTextAlignment="Center" HorizontalTextAlignment="Center" />
                                                        <Label Text="Connection" FontAttributes="Bold"
                                                           Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" />
                                                        <Switch IsToggled="{Binding Activated}" 
                                                           Grid.Row="2" Grid.Column="2" Grid.RowSpan="2" />
                                                        <Label Text="Connection info" FontSize="Micro" 
                                                           Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" />

                                                        <Label Text="&#x1F321;" FontSize="Medium" TextColor="Black"
                                                           Grid.Row="4" Grid.Column="0" Grid.RowSpan="2" 
                                                           VerticalTextAlignment="Center" HorizontalTextAlignment="Center" />
                                                        <Label x:Name="lblTemperature" FontAttributes="Bold"
                                                           Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2">
                                                            <Label.Text>
                                                                <MultiBinding StringFormat="{}{0} {1}">
                                                                    <Binding Path="Temperature" />
                                                                    <Binding Source="{local:Translate DegCentigradeUnits}" />
                                                                </MultiBinding>
                                                            </Label.Text>

                                                        </Label>
                                                        <Label Text="{local:Translate Temperature}" FontSize="Micro" 
                                                           Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2" />

                                                        <Label Text="&#x1F50B;" FontSize="Medium" TextColor="Black"
                                                           Grid.Row="6" Grid.Column="0" Grid.RowSpan="2" 
                                                           VerticalTextAlignment="Center" HorizontalTextAlignment="Center" />
                                                        <Label x:Name="lblVoltage" FontAttributes="Bold"
                                                        Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="2">
                                                            <Label.Text>
                                                                <MultiBinding StringFormat="{}{0} {1}">
                                                                    <Binding Path="Battery" />
                                                                    <Binding Source="{local:Translate VoltsUnits}" />
                                                                </MultiBinding>
                                                            </Label.Text>
                                                        </Label >
                                                        <Label Text="{local:Translate Voltage}" FontSize="Micro" 
                                                           Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="2" />

                                                        <Label Text="&#x1F4C8;" FontSize="Medium" TextColor="Black"
                                                           Grid.Row="8" Grid.Column="0" Grid.RowSpan="2" 
                                                           VerticalTextAlignment="Center" HorizontalTextAlignment="Center" />
                                                        <Label HorizontalOptions="StartAndExpand" Text="{Binding Status}" 
                                                           Grid.Row="9" Grid.Column="1" Grid.ColumnSpan="2" Grid.RowSpan="1" />

                                                    </Grid>
                                                    <Button Text="{local:Translate MeasurementsTitle}" FontSize="Large" x:Name="StartMeasure"
                                                            BorderWidth="0" BorderColor="{StaticResource colorSwitchThumbNormal}"
                                                            CornerRadius="0" BackgroundColor="PaleGreen"
                                                            HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"
                                                            HeightRequest="{Binding Source={RelativeSource Self}, Path=Height}"
                                                            Command="{Binding Path=BindingContext.GotoMeasurementPageCommand, 
                                                            Source={x:Reference ControlPanel}}"
                                                            CommandParameter="{Binding Id}">
                                                    </Button>
                                                    <!--
                                                    <Grid HeightRequest="40"
                                                          VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Margin="0" >
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto"></RowDefinition>
                                                        </Grid.RowDefinitions>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="1*"></ColumnDefinition>
                                                            <ColumnDefinition Width="1*"></ColumnDefinition>
                                                            <ColumnDefinition Width="1*"></ColumnDefinition>
                                                        </Grid.ColumnDefinitions>
                                                        <ImageButton Source="trashcan.png" Grid.Column="0" Grid.Row="0" 
                                                                    BorderWidth="0" BorderColor="LightGray" CornerRadius="5" BackgroundColor="Transparent"
                                                                     Margin="0" Padding="0"
                                                                    HorizontalOptions="Fill" VerticalOptions="CenterAndExpand"
                                                                    Command="{Binding Path=BindingContext.DeleteSensorCommand, 
                                                                    Source={x:Reference ControlPanel}}"
                                                                    CommandParameter="{Binding Id}"
                                                                    >
                                                        </ImageButton>
                                                        <ImageButton Source="{local:ImageResource SiamCross.images.recent.png}" Grid.Column="1" Grid.Row="0"
                                                                    BorderWidth="0" BorderColor="LightGray" CornerRadius="5" BackgroundColor="Transparent"
                                                                     Margin="0" Padding="0"
                                                                    HorizontalOptions="Fill" VerticalOptions="CenterAndExpand"
                                                                    Command="{Binding Path=BindingContext.RecentMeasurementCommand, 
                                                                    Source={x:Reference ControlPanel}}"
                                                                    CommandParameter="{Binding Id}"
                                                                    >
                                                        </ImageButton>
                                                        <ImageButton Source="{local:ImageResource SiamCross.images.start.png}" Grid.Column="2" Grid.Row="0"
                                                                    BorderWidth="0" BorderColor="LightGray" CornerRadius="5" BackgroundColor="Transparent"
                                                                    HorizontalOptions="Fill" VerticalOptions="CenterAndExpand"
                                                                    Command="{Binding Path=BindingContext.GotoMeasurementPageCommand, 
                                                                    Source={x:Reference ControlPanel}}"
                                                                    CommandParameter="{Binding Id}"
                                                                    >
                                                        </ImageButton>
                                                    </Grid>
                                                    -->
                                                </StackLayout>
                                            </Expander.Content>
                                        </Expander>
                                    </StackLayout>
                                </Frame>
                            </ViewCell.View>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>