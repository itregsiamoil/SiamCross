<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SiamCross.Views.MenuItems.ControlPanelPage"
             Title="Панель управления">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Панель управления"
                VerticalOptions="StartAndExpand" 
                HorizontalOptions="StartAndExpand" />
            <ListView x:Name="sensorList"
                HasUnevenRows="True"
                ItemsSource="{Binding SensorsData}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.View>
                                <StackLayout>
                                    <Label Text="{Binding Name}" FontSize="18" HorizontalTextAlignment="Start"/>
                                    <Label Text="{Binding Type}" HorizontalTextAlignment="Start"/>
                                    <StackLayout>
                                        <CollectionView ItemsSource="{Binding Parameters}">
                                            <CollectionView.ItemTemplate>
                                                <DataTemplate>
                                                    <Label Text="{Binding Path=Value}"/>
                                                </DataTemplate>
                                            </CollectionView.ItemTemplate>
                                        </CollectionView>
                                    </StackLayout>
                                </StackLayout>
                            </ViewCell.View>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>