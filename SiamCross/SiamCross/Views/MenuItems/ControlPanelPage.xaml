<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SiamCross.Views.MenuItems.ControlPanelPage"
             x:Name="ControlPanel"
             Title="Панель управления">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Панель управления"
                VerticalOptions="StartAndExpand" 
                HorizontalOptions="StartAndExpand" />
            <ListView x:Name="sensorList"
                HasUnevenRows="True"
                Margin="5"
                ItemsSource="{Binding SensorsData}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.View>
                                <StackLayout VerticalOptions="FillAndExpand" HeightRequest="130">
                                    <Grid VerticalOptions="FillAndExpand">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="20"></RowDefinition>
                                            <RowDefinition Height="20"></RowDefinition>
                                            <RowDefinition Height="2*"></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="3*"></ColumnDefinition>
                                            <ColumnDefinition Width="*"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <Label HorizontalOptions="StartAndExpand" Text="{Binding Name}" FontSize="18" Grid.Row="0" Grid.Column="0"/>
                                        <Label HorizontalOptions="StartAndExpand" Text="{Binding Type}" Grid.Row="1" Grid.Column="0" />
                                        <Label HorizontalOptions="StartAndExpand" Text="{Binding Status}" Grid.Row="2" Grid.Column="0"/>
                                        <Button HorizontalOptions="StartAndExpand" 
                                                Command="{Binding Path=BindingContext.DeleteSensorCommand, 
                                            Source={x:Reference ControlPanel}}"
                                                CommandParameter="{Binding Id}" 
                                                VerticalOptions="FillAndExpand" Text="Удалить" 
                                                Grid.Row="0"  Grid.RowSpan="3" Grid.Column="1"></Button>
                                    </Grid>
                                </StackLayout>
                            </ViewCell.View>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>