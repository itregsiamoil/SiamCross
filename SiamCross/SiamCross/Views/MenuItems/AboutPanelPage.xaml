<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SiamCross.Views.MenuItems.AboutPanelPage"
             xmlns:local="clr-namespace:SiamCross;assembly=SiamCross"
             x:Name="AboutPanel"
             Title="{local:Translate AboutTitle}">
    <ContentPage.Content>
        <StackLayout Padding="5">
            <TableView Intent="Data" 
               HasUnevenRows="True" 
               HorizontalOptions="CenterAndExpand">
                <TableRoot >
                    <TableSection Title="{local:Translate AboutCompany}">
                        <ViewCell>
                            <StackLayout>
                                <Label Text="{local:Translate TextAboutCompany}"/>
                            </StackLayout>
                        </ViewCell>
                        <TextCell Text="{local:Translate Site}"
                                  Detail="http://www.siamoil.ru"  />
                    </TableSection>
                    <TableSection Title="{local:Translate AboutTitle}">
                        <ViewCell>
                            <StackLayout>
                                <Label Text="{local:Translate TextAboutApp}"/>
                            </StackLayout>
                        </ViewCell>
                        <TextCell Text="{local:Translate AppVersion}"
                                  Command="{Binding CmdShowChanges}"
                                  Detail="{Binding Version}"  />
                        <!--TextCell Text="{local:Translate AppChanges}" IsEnabled="False"/-->
                        <ViewCell>
                            <StackLayout x:Name="ChangesView" IsVisible="False">
                                <Label Text="{local:Translate AppChanges}" 
                                       TextColor="{StaticResource colorAccent}" 
                                       Margin="20,5,5,5"/>
                                <Label x:Name="ChangesLabel" Text="{Binding VersionChanges}" />
                            </StackLayout>
                        </ViewCell>
                    </TableSection>
                </TableRoot>
            </TableView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>