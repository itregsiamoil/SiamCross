<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SiamCross.Views.MenuItems.SearchPanelTabs.BoundingTab"
             Title="Classic"
             xmlns:local="clr-namespace:SiamCross;assembly=SiamCross">

    <ContentPage.Content>
        <StackLayout>
            <Label Text="{local:Translate FoundDevices}" FontSize="Medium" />
            <ListView x:Name="boundedDevicesList" 
                      ItemsSource="{Binding ClassicDevices}" 
                      ItemSelected="ItemSelected"
                      IsPullToRefreshEnabled="True">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.View>
                                <StackLayout>
                                    <Label Text="{Binding Name}" FontSize="Medium"></Label>
                                </StackLayout>
                            </ViewCell.View>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>