<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SiamCross.Views.MenuItems.SearchPanelTabs.BoundingTab"
             Title="Classic">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Обнаруженные устройства: " FontSize="Medium" />
            <ListView x:Name="devicesList" ItemsSource="{Binding ClassicDevices}" ItemSelected="ItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.View>
                                <StackLayout>
                                    <Label Text="{Binding Name}" FontSize="Medium"></Label>
                                </StackLayout>
                            </ViewCell.View>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button Text="Connect" Command="{Binding Connect}"></Button>
            <Button Text="SendMessage" Command="{Binding SendMessage}"></Button>
            <Button Text="Disconnect" Command="{Binding Disconnect}"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>