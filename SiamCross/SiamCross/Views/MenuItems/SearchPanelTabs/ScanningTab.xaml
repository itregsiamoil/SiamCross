<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SiamCross.Views.MenuItems.SearchPanelTabs.ScanningTab"
             Title="Low Energy">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Обнаруженные устройства: " FontSize="Medium" />
            <ListView x:Name="devicesList" 
                      ItemsSource="{Binding ScannedDevices}"
                      ItemSelected ="ItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.View>
                                <StackLayout>
                                    <Label Text="{Binding Name}" FontSize="Medium"></Label>
                                </StackLayout>
                            </ViewCell.View>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button Text="Test" Command="{Binding Test}"></Button>
            <Button Text="Check" Command="{Binding Check}"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>