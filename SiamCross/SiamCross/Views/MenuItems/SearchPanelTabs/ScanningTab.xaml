<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SiamCross.Views.MenuItems.SearchPanelTabs.ScanningTab"
             Title="Поиск">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Обнаруженные устройства: " FontSize="Medium" />
                <Label Text="{Binding Count}" />
                <ListView x:Name="deviceList"
                    HasUnevenRows="True"
                     ItemsSource="{Binding ListViewBtItems}">
                </ListView>
            </StackLayout>
    </ContentPage.Content>
</ContentPage>