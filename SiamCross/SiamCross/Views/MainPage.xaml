             x:Class="SiamCross.Views.MainPage">

    <StackLayout>
        <Label Text="Обнаруженные устройства: " FontSize="Medium" />
        <Label Text="{Binding Count}" />
        <ListView x:Name="deviceList"
              HasUnevenRows="True"
              ItemsSource="{Binding ListViewBtItems}">
        </ListView>
    </StackLayout>

</ContentPage>
